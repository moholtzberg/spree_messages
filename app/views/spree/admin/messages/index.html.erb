<% content_for :page_title do %>
	<%= Spree.t(:messages) %>
<% end %>

<% content_for :table_filter_title do %>
	<%= Spree.t('search') %>
<% end %>

<% content_for :table_filter do %>

<%- end -%>


<% if @reviews.any? %>
	<table class="table">
	<!--	
		<colgroup>
			<col style="width: 30%;">
			<col style="width: 45%;">
			<col style="width: 5%;">
			<col style="width: 5%;">
			<col style="width: 15%;">
		</colgroup>
	-->
		<thead>
			<tr>
				<th><%= Spree.t('Source') %></th>
				<th><%= Spree.t("Name") %></th>
				<th><%= Spree.t("Email") %></th>
				<th><%= Spree.t("Viewed") %></th>
				<th><%= Spree.t("Created At") %></th>
			</tr>
		</thead>
		<tbody>
		<%- @reviews.each do |review| -%>
			<tr>
				<td class="align-center">
					<%= review.source %>
				</td>
				<td>
					<% if review %>
						<%= link_to review.name, admin_message_path(review) %>
					<% end %>
				</td>
				<td>
					<%= review.email %>
				</td>
				<td>
					<% if review.viewed %><span class="badge"><i class="icon icon-ok"></i></span><% end %>
				</td>
				<td class="align-right">
					<%= l review.created_at, :format => :short %>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>
<% else %>
	<div class="no-objects-found">
		<%= Spree.t(:no_results) %>
	</div>
<% end %>
